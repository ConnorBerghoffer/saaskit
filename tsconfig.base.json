{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@saaskit/config": ["packages/config/src"],
      "@saaskit/db": ["packages/db/src"],
      "@saaskit/auth": ["packages/auth/src"],
      "@saaskit/validator": ["packages/validator/src"]
    }
  }
}
