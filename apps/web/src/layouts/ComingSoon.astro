---
interface Props {
  config: {
    APP_NAME: string;
    WEB_URL?: string;
  };
  releaseDateDisplay: string;
  releaseDateISO: string;
}

const { config, releaseDateDisplay, releaseDateISO } = Astro.props as Props;
const title = `${config.APP_NAME} – Coming Soon`;
const description = `${config.APP_NAME} launches ${releaseDateDisplay}. Subscribe for updates.`;
---
<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={`coming soon, launch, ${config.APP_NAME}`} />
    <meta name="author" content={config.APP_NAME} />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="icon" href="/coming-soon/img/favicon/monochrome/favicon.ico" sizes="any" />
    <link rel="icon" href="/coming-soon/img/favicon/monochrome/icon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/coming-soon/img/favicon/monochrome/apple-touch-icon.png" />
    <link rel="manifest" href="/coming-soon/img/favicon/monochrome/manifest.webmanifest" />
    <meta property="og:image:height" content="1200" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={config.WEB_URL || ""} />
    <meta property="og:image" content="/coming-soon/img/favicon/monochrome/apple-touch-icon.png" />
    <link rel="stylesheet" href="/coming-soon/css/loaders/loader-monochrome.css" />
    <link rel="stylesheet" href="/coming-soon/css/plugins.css" />
    <link rel="stylesheet" href="/coming-soon/css/main.css" />
    <meta name="theme-color" content="#0f172a" />
    <meta name="msapplication-navbutton-color" content="#0f172a" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#0f172a" />
  </head>
  <body>
    <div class="loader">
      <div class="loader-content">
        <div class="loader-logo slideInDown">
          <img src="/coming-soon/img/saaskit-logo.svg" alt={config.APP_NAME} />
        </div>
        <div class="loader-caption slideInUp">
          <span class="loading-dots">
            <span class="dot"></span>
            <span class="dot"></span>
            <span class="dot"></span>
          </span>
        </div>
      </div>
    </div>

    <section id="main" class="main">
      <div class="container-fluid p-0 fullheight">
        <div class="row g-0 fullheight">
          <div class="col-12 col-xl-6 main__intro">
            <div class="intro__content">
              <div class="intro__logo">
                <img src="/coming-soon/img/saaskit-logo.svg" alt={config.APP_NAME} />
              </div>
              <div class="intro__menu">
                <nav>
                  <ul>
                    <li><a href="#about" id="about-trigger">Vision</a></li>
                    <li><a href="#works" id="works-trigger">Platform</a></li>
                    <li><a href="#contact" id="contact-trigger">Contact</a></li>
                  </ul>
                </nav>
              </div>
              <div class="intro__socials">
                <ul>
                  <li>
                    <a href="https://twitter.com/saaskit" target="_blank" rel="noreferrer">
                      <i class="fa-brands fa-twitter"></i>
                    </a>
                  </li>
                  <li>
                    <a href="https://github.com/saaskit" target="_blank" rel="noreferrer">
                      <i class="fa-brands fa-github"></i>
                    </a>
                  </li>
                  <li>
                    <a href="https://www.linkedin.com/company/saaskit" target="_blank" rel="noreferrer">
                      <i class="fa-brands fa-linkedin-in"></i>
                    </a>
                  </li>
                </ul>
              </div>
              <div class="intro__headline">
                <h1>
                  {config.APP_NAME}
                  <br />
                  is on the way
                </h1>
                <p class="headline-text">
                  We are shipping a fully modular SaaS stack—auth, billing, infra, and UI patterns that deploy in minutes instead of months.
                </p>
                <a href="#0" class="button button-l button-dark-outline" id="notify-trigger">
                  <span class="button-caption">Notify me</span>
                </a>
              </div>
            </div>
          </div>
          <div class="col-12 col-xl-6 main__media">
            <div class="media__image media-1">
              <div class="color-layer color-layer-medium"></div>
              <div class="media__countdown">
                <div id="countdown"></div>
                <span class="help-text">Days to Launch · Launching {releaseDateDisplay}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="about" class="inner about">
      <div class="container-fluid p-0 fullheight">
        <div class="row g-0 flex-xl-row-reverse fullheight">
          <div class="col-12 col-xl-6 scroll scroll-left about__info">
            <div class="blocks no-padding-bottom">
              <div class="section-controls">
                <a href="#0" id="about-close" class="section-close">
                  <span class="material-icons">arrow_back</span>
                </a>
              </div>
              <div class="blocks__single section-title">
                <h2>Why {config.APP_NAME}</h2>
                <span>Launch-ready <em>infrastructure</em></span>
                <p>
                  Skip weeks of wiring auth, payments, email, and analytics. {config.APP_NAME} ships a batteries-included monorepo with typed APIs, Fastify backend, Vite dashboard, and Astro marketing shell.
                </p>
              </div>
              <div class="blocks__single no-padding no-margin features">
                <div class="container-fluid p-0">
                  <div class="row g-0 features__item">
                    <div class="col-12 col-md-6 features__image feature-1"></div>
                    <div class="col-12 col-md-6 features__descr">
                      <div class="descr__container">
                        <h3>Unified design</h3>
                        <p class="text-s">Shared tokens, shadcn primitives, and responsive layouts keep the app + marketing site consistent.</p>
                      </div>
                    </div>
                  </div>
                  <div class="row g-0 flex-md-row-reverse features__item">
                    <div class="col-12 col-md-6 features__image feature-2"></div>
                    <div class="col-12 col-md-6 features__descr">
                      <div class="descr__container">
                        <h3>Production stack</h3>
                        <p class="text-s">Fastify, Drizzle, Better Auth, Stripe, and Resend are wired together behind type-safe helpers.</p>
                      </div>
                    </div>
                  </div>
                  <div class="row g-0 features__item">
                    <div class="col-12 col-md-6 features__image feature-3"></div>
                    <div class="col-12 col-md-6 features__descr">
                      <div class="descr__container">
                        <h3>Automation ready</h3>
                        <p class="text-s">Turbo + pnpm orchestrate apps and packages so new modules drop in like npm installs.</p>
                      </div>
                    </div>
                  </div>
                  <div class="row g-0 flex-md-row-reverse features__item">
                    <div class="col-12 col-md-6 features__image feature-4"></div>
                    <div class="col-12 col-md-6 features__descr">
                      <div class="descr__container">
                        <h3>Real metrics</h3>
                        <p class="text-s">PostHog, Resend, and LemonSqueezy hooks are ready for observability and monetization.</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="blocks__single blockquote">
                <div class="container-fluid p-0">
                  <div class="row g-0">
                    <div class="col-12 blockquote__content">
                      <i class="fa-solid fa-quote-left blockquote__icon"></i>
                      <blockquote>
                        <p>“Launch faster without duct taping a new stack every sprint.”</p>
                        <cite>
                          <span>{config.APP_NAME} Crew</span>
                          <span>Founding Team</span>
                        </cite>
                      </blockquote>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-xl-6 static fullheight about__photo static-bg-1"></div>
        </div>
      </div>
    </section>

    <section id="works" class="inner works">
