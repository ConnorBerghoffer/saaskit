---
const { title = "SaaSKit", description = "Modular SaaS starter" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <style>
      :root {
        font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        color: #e2e8f0;
        background-color: #020617;
      }
      body {
        margin: 0;
      }
      main {
        min-height: 100vh;
        display: grid;
        place-items: center;
        padding: 4rem 1.5rem;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
